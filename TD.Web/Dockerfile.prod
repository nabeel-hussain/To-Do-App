#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["TD.Web/TD.Web.csproj", "TD.Web/"]
RUN dotnet restore "TD.Web/TD.Web.csproj"
COPY . .
WORKDIR "/src/TD.Web"
RUN dotnet build "TD.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "TD.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS finala
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TD.Web.dll"]